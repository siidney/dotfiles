out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# update interval in seconds
update_interval 1.0

# no of times conky will update before quitting.
# set to zero runs forever
total_run_times 0

# shortens units to a single character (kiB->k, GiB->G, etc).
short_units yes

# How strict should if_up be when testing an interface for being up.
if_up_strictness address

# add spaces to stop elements moving about.
use_spacer right

# force utf-8
override_utf8_locale no

# number of cpu samples to average
# 1 disables averaging
cpu_avg_samples 2

#everything after TEXT to be formatted to screen
TEXT

#JSON for i3bar
[
# MPD
{
    "full_text":"MPD",
    "color":"\#949494",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":
        ${if_match "${mpd_status}" != "Stopped"}"${mpd_smart}"
        ${else}"No media |"
        ${endif},
    "short_text":
        ${if_match "${mpd_status}" != "Stopped"}"${mpd_title}"
        ${else}"No media |"
        ${endif},
    "color":
        ${if_match "${mpd_status}" == "Playing"}"\#AAF096"
        ${else}${if_match "${mpd_status}" == "Paused"}"\#F0DC64"
        ${else}"\#FFFFFF"
        ${endif}${endif},
    "separator":false,
    "separator_block_width":11
},
# VOLUME
{
    "full_text":"VOLUME",
    "color":"\#949494",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":"${exec $HOME/.i3/scripts/vol.sh}",
    "color":"\#AAF096",
    "min_width":"100%",
    "separator":false,
    "separator_block_width":11
},
# DISK USAGE
{
    "full_text":"HOME",
    "color":"\#949494",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":
       "${fs_free_perc /home}% ${fs_free /home} /${fs_size /home}",
    "color":
        ${if_match ${fs_free_perc cpu0}<25}"\#FF9933"
        ${else}${if_match ${fs_free_perc cpu0}<50}"\#F0DC64"
        ${else}${if_match ${fs_free_perc cpu0}<75}"\#AAF096"
        ${else}"\#CC9393"
        ${endif}${endif}${endif},
    "separator":false,
    "separator_block_width":11
},
# UP/DOWN SPEED
{
    "full_text":
        ${if_up enp3s0}"${execi 65535 wget -O - http://ip.tupeux.com | tail}"
        ${else}"No network"
        ${endif},
    "color":"\#AAF096",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":"DOWN",
    "color":"\#9494948",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":"${downspeed enp3s0}",
    "color":"\#AAF096",
    "min_width":"99.99b",
    "separator":false
},
{
    "full_text":"UP",
    "color":"\#949494",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":"${upspeed enp3s0}",
    "color":"\#AAF096",
    "min_width":"99.99b",
    "separator":false
},
# RAM
{
    "full_text":"RAM",
    "color":"\#949494",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":"${memperc}%",
    "color":
        ${if_match ${memperc}<25}"\#AAF096"
        ${else}${if_match ${memperc}<50}"\#F0DC64"
        ${else}${if_match ${memperc}<75}"\#FF9933"
        ${else}"\#CC9393"
        ${endif}${endif}${endif},
    "min_width":"100%",
    "separator":false,
    "separator_block_width":0
},
# CPU
{
    "full_text":"CPU",
    "color":"\#949494",
    "separator":false,
    "separator_block_width":5
},
{
    "full_text":"${cpu cpu0}%",
    "color":
        ${if_match ${cpu cpu0}<25}"\#AAF096"
        ${else}${if_match ${cpu cpu0}<50}"\#F0DC64"
        ${else}${if_match ${cpu cpu0}<75}"\#FF9933"
        ${else}"\#CC9393"
        ${endif}${endif}${endif},
    "align":"center",
    "min_width":"100%",
    "separator":false,
    "separator_block_width":0
},
# CLOCK
{
    "full_text":
        "${time %a,} ${time %B %e %G} ${time %H:%M:%S}",
    "color":"\#FFFFFF"
}
],
