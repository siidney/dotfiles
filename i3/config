# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    mode dock
    font pango:Amble regular 9

    colors {
        # whole color settings
        background #222222
        statusline #ADD8E6
        separator  #FFFFFF

        # type              border  background  font
        focused_workspace   #000000 #000000     #AAF096
        active_workspace    #000000 #000000     #AAF096
        inactive_workspace  #222222 #222222     #888888
        urgent_workspace    #222222 #222222     #FF9933
    }

    position top
    #status_command i3status -c ~/.i3/i3status.conf
    status_command $HOME/.i3/conky/conky-i3bar
    #status_command i3blocks

    # system tray
    tray_output DVI-I-0

    # strip workspace numbers
    strip_workspace_numbers yes
}

